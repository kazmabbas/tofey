name: Encrypt Python Script

on:
  workflow_dispatch:
    inputs:
      file_name:
        description: 'Name of the Python file to encrypt'
        required: true

jobs:
  encrypt:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.9'

    - name: Install Tofey
      run: |
        python -m pip install --upgrade pip
        pip install .

    - name: Encrypt file
      run: |
        python -c "from tofey import Tofey; Tofey.encrypt_script('${{ github.event.inputs.file_name }}', '${{ github.event.inputs.file_name }}.tofey')"

    - name: Upload Encrypted File
      uses: actions/upload-artifact@v3
      with:
        name: encrypted-file
        path: ${{ github.event.inputs.file_name }}.tofey
